<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="tweet"
            type="com.example.ernar.myapplication.viewmodel.TweetViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <TextView
            android:id="@+id/postitem_post"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="@{tweet.content}"
            android:textColor="?android:attr/textColorPrimary"
            tools:text="content" />

        <TextView
            android:id="@+id/postitem_site"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/postitem_post"
            android:gravity="end"
            android:text="@{tweet.site}"
            android:textAlignment="textEnd"
            tools:text="site" />
    </RelativeLayout>
</layout>